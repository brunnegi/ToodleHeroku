<h1>Listing pois</h1>

<table>
  <tr>
    <th>Trip</th>
    <th>Name</th>
    <th>Location</th>
    <th>Description</th>
    <th>Image</th>
    <th>Voters</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pois.each do |poi| %>
  <tr>
    <td><%= poi.trip_id %></td>
    <td><%= poi.name %></td>
    <td><%= poi.location %></td>
    <td><%= poi.description %></td>
    <td><%= poi.image %></td>
    <td><%= poi.voters %></td>
    <td><%= link_to 'Show', poi %></td>
    <td><%= link_to 'Edit', edit_poi_path(poi) %></td>
    <td><%= link_to 'Destroy', poi, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

